<BorderPane minHeight="200.0" minWidth="300.0" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxKauppa.KaupanNimiController">
   <bottom>
      <VBox maxHeight="20.0" prefHeight="20.0" spacing="10.0" BorderPane.alignment="BOTTOM_RIGHT">
         <children>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10.0">
               <children>
                  <Label text="Anna kaupan nimi" />
                  <TextField fx:id="nimensyottoTextField" nodeOrientation="LEFT_TO_RIGHT" prefWidth="250.0">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor></TextField>
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#handleAvaa" text="Avaa">
                     <tooltip>
                        <Tooltip text="Avaa kaupan tuotetietokanta" />
                     </tooltip></Button>
                  <Button mnemonicParsing="false" onAction="#handlePeruuta" text="Peruuta">
                     <tooltip>
                        <Tooltip text="Peruuta" />
                     </tooltip></Button>
              </buttons>
            </ButtonBar>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" depthTest="DISABLE" minHeight="170.0" prefHeight="170.0" spacing="10.0" style="-fx-background-color: #b3defc;" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="KAUPAN TUOTETIETOKANTA">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="Versio 1.0" />
            <Label text="Siiri Murtolahti">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
